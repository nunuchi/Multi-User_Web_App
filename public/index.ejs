<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<form action="/search" method="POST">
		<div id="Inputs">
			Name: <input name="search_text" type="text" id="inputItem">
			Color: <select id="color" name="color">
					<option value="red">red</option>
					<option value="blue">blue</option>
				</select>
			<input type="submit" value="Submit" id="submitItem">
		</div>
	</form>

	<% if(errors !=undefined) { %>
	<ul>
		<% errors.forEach(function(error){%>
		<li> <%= error.msg %> </li>
		<% }) %>
		</ul>
	<% } %>
</body>
</html>